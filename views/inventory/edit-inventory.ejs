<!--Content heading-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %> 
    <ul class="notice">
       <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li><%}) %>       
    </ul>
<%} %>
<form action="/inv/update" id="updateForm" method="post">
    <div>
        <label for="classification_name">Classification</label>
     <select name="classification_name" id="classification_name"><%- select %></select> 
    </div>
    <div>
        <label for="_inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required placeholder="Min of 3 characters" pattern=".{3,}" value="<%= locals.inv_make %>">
    </div>
    <div>
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required placeholder="Min of 3 characters" pattern=".{3,}" value="<%= locals.inv_model %>">
    </div>
    <div>
        <label for="inv_description">Description</label>
        <input type="text" name="inv_description" id="inv_description" required value="<%= locals.inv_description %>">
    </div>
    <div>
        <label for="inv_image">Image Path</label>
        <input type="text" id="inv_image" name="inv_image" required value="<%= locals.inv_image %>">
    </div>
    <div>
        <label for="inv_thumbnail">Thumbnail Path</label>
        <input type="text" id="inv_thumbnail" name="inv_thumbnail" required value="<%= locals.inv_thumbnail %>">
    </div>
    <div>
        <label for="inv_price">Price</label>
        <input type="text" id="inv_price" name="inv_price" required placeholder="decimal or integer" pattern="^\d+(\.\d{1,2})?$" value="<%= locals.inv_price %>" >
    </div>
    <div>
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" required placeholder="4-digit year" pattern="\d{4}" value="<%= locals.inv_year %>">
    </div>
    <div>
        <label for="inv_miles">Miles</label>
        <input type="text" id="inv_miles" name="inv_miles" required placeholder="digits only" pattern="\d+"value="<%= locals.inv_miles %>">
    </div>    
    <div>
        <label for="inv_color">Color</label>
        <input type="text" id="inv_color" name="inv_color" required value="<%= locals.inv_color %>">
    </div>
    <button type="submit" name="submit" id="updateButton" value="Update Vehicle" disabled>Update Vehicle</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <%} %>>
</form>
<script src="../../js/inventory.js"></script>
<script src="../..js/inv-update.js"></script>