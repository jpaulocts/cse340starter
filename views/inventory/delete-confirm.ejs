<!--Content heading-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %> 
    <ul class="notice">
       <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li><%}) %>       
    </ul>
<%} %>
<form action="/inv/delete" id="deleteForm" method="post">
    <div>
        <label for="_inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required placeholder="Min of 3 characters" pattern=".{3,}" value="<%= locals.inv_make %>" readonly>
    </div>
    <div>
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required placeholder="Min of 3 characters" pattern=".{3,}" value="<%= locals.inv_model %>" readonly>
    </div>
    <div>
        <label for="inv_price">Price</label>
        <input type="text" id="inv_price" name="inv_price" required placeholder="decimal or integer" pattern="^\d+(\.\d{1,2})?$" value="<%= locals.inv_price %>" readonly>
    </div>
    <div>
        <label for="inv_year">Year</label>
        <input type="text" id="inv_year" name="inv_year" required placeholder="4-digit year" pattern="\d{4}" value="<%= locals.inv_year %>" readonly>
    </div>
    <div><p>ATTENTION: Confirm Deletion - The delete is permanent.</p></div>
    <button type="submit" name="submit" id="#deleteButton" value="Update Vehicle" >Delete</button>
    <input type="hidden" name="inv_id"
    <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
    <%} %>>
</form>

