<!--Content heading-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>
<form action="/account/login" method="post">
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_firstname %>">
    </div>
    <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <div id="pswdMessage">Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</div>
        <span id="showPswd">Show Password</span>   
    </div>
    <button type="submit">Login</button>
    <p>No account? <a href="../account/register">Sign up</a></p>
</form>
<script src="../../js/password.js"></script>
    