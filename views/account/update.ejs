<!--Content heading-->
<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>
<%- messages() %>
<% if (errors) { %> 
    <ul class="notice">
       <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li><%}) %>       
    </ul>
<%} %>
<form action="/account/update" id="updateAccountForm" method="post">
    <div>
        <label for="account_firstname">First name</label>
        <input type="text" id="firstname" name="account_firstname" required value="<%= locals.account_firstname %>">
    </div>
    <div>
        <label for="account_lastname">Last name</label>
        <input type="text" id="lastname" name="account_lastname" required value="<%= locals.account_lastname %>">
    </div>
    <div>
        <label for="email">Email address:</label>
        <input type="email" id="email" name="account_email" required placeholder="Enter a valid email address" value="<%= locals.account_email %>">
    </div>
    <button type="submit" name="submit" id="updateButton" value="Update account" disabled>Update</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <%} %>>
</form>
<h2>Update Password</h2>
<form action="/account/password" id="updateAccountPassword" method="post">
    <div>
        <div id="pswdMessage">Passwords must be minimum of 12 characters and include 1 capital letter, 1 number and 1 special character.</div>
        
        <label for="password">Password:</label>
        <input type="password" id="password" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <span id="showPswd">Show Password</span>
    </div>
    <button type="submit" name="submit" id="updatePassword" value="Update Password">Change Password</button>
    <input type="hidden" name="account_id"
    <% if(locals.account_id) { %> value="<%= locals.account_id %>"
    <%} %>>
</form>
<script src="../../js/account-update.js"></script>
<script src="../../js/password.js"></script>